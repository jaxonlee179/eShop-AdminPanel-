@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.RoleId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>
                Add or remove users from this role
            </h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
            <div>
                <input type="hidden" asp-for="@Model[i].UserId" />
                <input type="checkbox" value="true" asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].UserName" class="form-check-label ms-1">
                    @Model[i].UserName
                </label>
            </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="Administration" asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>